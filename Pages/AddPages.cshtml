@page
@model RentRazor.Pages.AddPagesModel
@{
}

<div>
    <h1>Добавить недвижимость</h1>

    <form method="post" enctype="multipart/form-data">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AddressOfProperty.Adress" class="control-label"></label>
            <input asp-for="AddressOfProperty.Adress" class="form-control" required/>
            <span asp-validation-for="AddressOfProperty.Adress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressOfProperty.FloorNumber" class="control-label"></label>
            <input asp-for="AddressOfProperty.FloorNumber" min=1 max=250 class="form-control" required/>
            <span asp-validation-for="AddressOfProperty.FloorNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressOfProperty.ApartmentNumber" class="control-label"></label>
            <input asp-for="AddressOfProperty.ApartmentNumber" min=1 max=20 class="form-control" required/>
            <span asp-validation-for="AddressOfProperty.ApartmentNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Property.PropertyType" class="control-label"></label>
            <select asp-for="Property.PropertyType" class ="form-control" asp-items="ViewBag.PropertyType"></select>
        </div>
        <div class="form-group">
            <label asp-for="Property.TelephoneNumber" class="control-label"></label>
            <input asp-for="Property.TelephoneNumber" class="form-control" required/>
            <span asp-validation-for="Property.TelephoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="custom-file-input form-control" required/>
                    <label class=custom-file-label>Click here to load image</label>
                </div>  
            </div>
        </div>
        <div class="card">
            <p class="card-header">Тэги</p>
            <div class="card-body text-justify" style="width: 18rem;">
                @foreach(var tag in Model.Tags)
                {
                    <p class="text-justify tags"></p>
                }
                 <button class="input-group-text border-0">
                    <i class="fas fa-plus"></i>
                 </button>
                 <div class="list-group" style="visibility:hidden;">
                    @foreach(var tag in Model.Tags.Where(x => !Model.AddedTags.Contains(x)))
                    {
                        <button class="list-group-item list-group-item-action" asp-page-handler="AddTag" asp-route-id="@tag.Id">@tag.TagName</button>    
                    }
                 </div>
            </div>
        </div>
        
        @section Scripts
        {
            <script>
                $(document).ready(function(){
                    $('.custom-file-input').on("change", function() {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });

                $("#")
            </script>
        }

        <hr />

        <div class="form-group">
            <button asp-page-handler="MainAdd" type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>
    
    <div>
        <a asp-page="Index">Back to List</a>
    </div>

</div>